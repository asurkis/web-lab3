<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="QueriesDB">
        <class>ru.ifmo.se.labs.asurkis.lab3.User</class>
        <class>ru.ifmo.se.labs.asurkis.lab3.Point</class>
        <class>ru.ifmo.se.labs.asurkis.lab3.Query</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/web-lab3"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
